<section class="mt-12 mb-2">
  <div class="mx-auto container">
    <h2 class="text-2xl font-black text-center mb-2">{{ product.metafields.custom.cards_title }}</h2>
    <div class="flex gap-12 justify-center">
      {% for i in (1..3) %}
        <div class="basic-1/3">
          {% assign cardImage = "card" | append: i | append: '_image' %}
          {% assign cardTitle = "card" | append: i | append: '_title' %}
          {% assign cardDesc = "card" | append: i | append: '_description' %}
          <img src="{{ product.metafields.custom[cardImage] |  image_url: width: 500  }}" alt="">
          <h3 class="text-xl font-bold">{{ product.metafields.custom[cardTitle] }}</h3>
          <p>{{ product.metafields.custom[cardDesc] }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Card template",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_Cards",
        "label": "Enable Cards",
        "default": true
      }
    ],
    "blocks": [
      {
        "type": "card",
        "name": "Card",
        "settings": [
          {
            "type": "inline_richtext",
            "id": "card_heading",
            "label": "Card Haeding"
          }, {
            "type": "image_picker",
            "id": "card_image",
            "label": "Card Image"
          }, {
            "type": "richtext",
            "id": "card_desc",
            "label": "Card Description"
          }
        ]
      }
    ]
  }
{% endschema %}