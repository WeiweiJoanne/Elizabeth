{% if section.settings.enable_slider_2 %}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'Slider' %}
        {% if block.settings.heading != blank %}
          <section class="mt-12 mb-2">
            <div class="mx-auto container">
              <h2 class="text-2xl font-black text-center mb-2">{{ block.settings.heading }}</h2>
              <div class="swiper" id="swiper2">
                <div class="swiper-wrapper">
                  {% for num in (1..3) %}
                    {% assign image = 'image_' | append: num %}
                    {% if block.settings[image] != blank %}

                      <div class="swiper-slide">
                        <img
                          class="w-full"
                          src="{{ block.settings[image] | image_url: width: 1600 }}"
                          alt="">
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
              </div>
            </div>
          </section>
        {% endif %}
    {% else %}
      {% endcase %}
    {% endfor %}

    <script>
      const swiper2 = new Swiper('#swiper2', {
          loop: true,
          pagination: {
      el: '.swiper-pagination',
          },
          navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
          },


      });

    </script>
  {% endif %}

  {% schema %}
    {
      "name": "Slider template 2",
      "settings": [
        {
          "type": "checkbox",
          "id": "enable_slider_2",
          "label": "Enable Slider 2",
          "default": true
        }
      ],
      "blocks": [
        {
          "type": "Slider",
          "name": "Slider",
          "settings": [
            {
              "type": "text",
              "id": "heading",
              "label": "Slider Heading"
            }, {
              "type": "image_picker",
              "id": "image_1",
              "label": "Image 1"
            }, {
              "type": "image_picker",
              "id": "image_2",
              "label": "Image 2"
            }, {
              "type": "image_picker",
              "id": "image_3",
              "label": "Imag 3"
            }
          ],
          "limit": 1
        }
      ]
    }
  {% endschema %}