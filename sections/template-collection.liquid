{% paginate collection.products by 2 %}
<div class="container mx-auto py-4">

    <div class="flex flex-col px-2 mt-6 gap-8 md:flex-row md:justify-center">



        {% for product in collection.products %}
        <a class="flex flex-col w-full md:w-1/2 xl:w-1/3" href="{{ product.url }}">
            <div class="shadow-lg rounded-xl overflow-hidden">
                {% if product.featured_image %}
                <img class="w-full" src="{{ product.featured_image |  image_url: width: 540 }}" alt="{{ product.featured_image.alt }}">
                {% endif %}
                <div class="my-4 px-6">
                    <h2 class="text-xl text-center font-black ">{{ product.title }}</h2>
                </div>

                {% comment %} <p>{{ product.price | money }}</p> {% endcomment %}
            </div>
        </a>
        {% else %}
        <p>There is no match product.</p>
        {% endfor %}
    </div>
</div>
{% endpaginate %}