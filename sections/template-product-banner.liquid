{% if section.settings.enable_product_banner %}
  <section>
    <div class="mx-auto container flex my-8 items-center flex-col gap-4 lg:flex-row lg:gap-0">
      <div class="px-2 product--media basis-12/12 lg:basis-5/12 xl:basis-6/12 2xl:basis-5/12">
        {% render 'product-media' %}
      </div>
      <div class="px-2 product--infomation basis-12/12 lg:basis-7/12 xl:basis-6/12 2xl:basis-7/12">
        <h1 class="text-lg font-black md:text-2xl xl:text-3xl">
          {{ product.title }}
        </h1>
        <p class="mt-4 text-sm xl:text-base">
          {{ product.description }}
        </p>
        <button class="my-2 mt-4 bg-red-500 px-12 py-2 text-white rounded-xl text-xl">Add to Cart</button>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
  {
    "name": "Product banner",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_product_banner",
        "label": "Enable Product Banner",
        "default": true
      }
    ]
  }
{% endschema %}