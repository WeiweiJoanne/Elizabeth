{% if section.settings.enable_slider %}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'slider' %}
        {% if block.settings.heading != blank %}
          <section class="mt-12 mb-2">
            <div class="mx-auto container ">
              <h2 class="text-2xl font-black text-center mb-2">{{ block.settings.heading }}</h2>
              <div class="swiper" id="swiper1">
                <div class="swiper-wrapper">
                  {% for num in (1..3) %}
                    {% assign image = 'image_' | append: num %}
                    {% if block.settings[image] != blank %}
                      <div class="swiper-slide">
                        <img  class="w-full" src="{{ block.settings[image] | image_url: width: 1280 }}"
                          alt="" width="1280" height="" >
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
                <div class="swiper-pagination" id="swiper-pagination1"></div>
                <div class="swiper-button-prev" id="swiper-button-prev1"></div>
                <div class="swiper-button-next" id="swiper-button-next2"></div>
              </div>
            </div>
          </section>
        {% endif %}
      {% else %}
    {% endcase %}
  {% endfor %}

  <script>

    var swiper = new Swiper('#swiper1', {
      loop: true,
      pagination: {
        el: '#swiper-pagination1',
      },
      navigation: {
        nextEl: '#swiper-button-next1',
        prevEl: '#swiper-button-prev1',
      },
    });
  </script>
{% endif %}

{% schema %}
{
  "name": "Slider template 1",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_slider",
      "label": "Enable Slider",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slider",
      "name": "Slider",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Slider Heading"
        },
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
        {
          "type": "image_picker",
          "id": "image_3",
          "label": "Imag 3"
        }
      ],
      "limit": 1
    }
  ]
}
{% endschema %}
